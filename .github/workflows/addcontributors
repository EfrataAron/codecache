name: Add contributors

on:
  # Scheduled daily update at midnight
  schedule:
    - cron: '0 0 * * *'

  # Trigger on push to any branch
  push:

  # Trigger when a pull request is merged
  pull_request:
    types: [closed]

  # Trigger on manual run
  workflow_dispatch:

jobs:
  add-contributors:
    runs-on: ubuntu-latest
    steps:
    - uses: actions/checkout@v2

    # Add the image embed (replace with your actual URL)
    - name: Add contributors image
      run: |
        echo "<a href=\"https://github.com/notsoocool/codecache/graphs/contributors\"> <img src=\"https://contrib.rocks/image?repo=notsoocool/codecache" /> </a>" >> README.md